{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UserPrincipalRequest",
  "type": "object",
  "required": ["authorization", "request"],
  "properties": {
    "authorization": {
      "$ref": "authorization.json#/definitions/Authorization"
    },
    "request": {
      "type": "object",
      "properties": {
        "fields": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "streamerSubscriptionKeys",
              "streamerConnectionInfo",
              "preferences",
              "surrogateIds"
            ]
          }
        }
      }
    }
  }
}
